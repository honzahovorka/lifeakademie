<section class="sixteen columns">
  <h2>Kurzy</h2>

  <table class="custom-table">
    <thead>
      <tr>
        <th>Název</th>
        <th>Město</th>
        <th>Začátek</th>
        <th>Cena</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, admin_course_path(course), title: 'Informace o kurzu' %></td>
        <td><%= course.city %></td>
        <td><%= I18n.localize(course.start_date) %></td>
        <td><%= number_to_currency course.price %></td>
        <td class="c"><%= link_to 'Zobrazit', admin_course_path(course) %></td>
        <td class="c"><%= link_to 'Upravit',  admin_edit_course_path(course) %></td>
        <td class="c"><%= link_to 'Smazat',   admin_course_path(course), method: :delete, confirm: 'Opravdu chcete smazat tento termín?' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>
