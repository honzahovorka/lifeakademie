    <meta http-equiv="Content-Type" content="text/html,audio/mpeg; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <title><%= yield(:title).empty? ? 'Life Akademie' : yield(:title) %> | lifeakademie.cz</title>

    <%= stylesheet_link_tag    :application, :media => :all %>
    <%= javascript_include_tag :modernizr %>
    <%= favicon_link_tag '/lifeakademie.ico' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <!-- user bar -->
    <%= render 'layouts/shared/user_bar' %>

    <!-- header -->
    <%= render 'layouts/shared/header' %>

    <!-- background-image -->
    <%= render 'layouts/shared/bg' %>

    <!-- content -->
    <%= render 'layouts/shared/notifications' %>

    <%= yield %>

    <!-- footer -->
    <%= render 'layouts/shared/footer' %>

    <%= javascript_include_tag :application %>
