<div id="user-bar">
  <div class="container">
  <% if current_user %>
    Přihlášen uživatel <b><%= current_user.full_name %></b> | <%= link_to 'Odhlásit se', logout_path %>
  <% else %>
    <%= link_to 'Přihlásit se', login_path %> | <%= link_to 'Registrace', register_path %>
  <% end %>
  </div>
</div>
